# LiLove Production Environment Configuration
# Copy this file and fill in your production credentials

# ===== DATABASE =====
DATABASE_URL=postgresql://username:password@host:port/database

# ===== SESSION & SECURITY =====
SESSION_SECRET=GENERATE_A_SECURE_64_CHARACTER_STRING_HERE
JWT_SECRET=GENERATE_ANOTHER_SECURE_STRING_FOR_JWT

# ===== GOOGLE OAUTH =====
GOOGLE_CLIENT_ID=your-production-google-client-id.apps.googleusercontent.com
GOOGLE_CLIENT_SECRET=your-production-google-client-secret
GOOGLE_WEB_CLIENT_ID=your-production-google-web-client-id.apps.googleusercontent.com

# ===== APPLE SIGN-IN =====
APPLE_CLIENT_ID=org.lilove.signin
APPLE_SERVICE_ID=org.lilove.signin
APPLE_TEAM_ID=YOUR_APPLE_TEAM_ID
APPLE_KEY_ID=YOUR_APPLE_KEY_ID
APPLESIGNIN_SECRET_KEY=-----BEGIN PRIVATE KEY-----
YOUR_APPLE_PRIVATE_KEY_CONTENT_HERE
-----END PRIVATE KEY-----

# ===== APPLE APP STORE (IAP) =====
APPSTORE_KEY_ID=YOUR_APPSTORE_KEY_ID
APPSTORE_ISSUER_ID=YOUR_APPSTORE_ISSUER_ID
ASC_ISSUER_ID=YOUR_ASC_ISSUER_ID
ASC_KEY_ID=YOUR_ASC_KEY_ID
ASC_PRIVATE_KEY=-----BEGIN PRIVATE KEY-----
YOUR_ASC_PRIVATE_KEY_HERE
-----END PRIVATE KEY-----
APPLE_BUNDLE_ID=org.lilove.app
IOS_BUNDLE_ID=org.lilove.app

# ===== PAYMENT PROVIDERS =====
# Choose your payment provider: stripe, paddle, or mock
PAYMENT_PROVIDER=stripe

# Stripe Configuration
STRIPE_SECRET_KEY=sk_live_your_production_stripe_secret_key
STRIPE_PUBLISHABLE_KEY=pk_live_your_production_stripe_publishable_key
STRIPE_WEBHOOK_SECRET=whsec_your_stripe_webhook_secret

# Paddle Configuration (Alternative)
PADDLE_ENV=production
PADDLE_VENDOR_ID=your_paddle_vendor_id
PADDLE_API_KEY=your_paddle_api_key
PADDLE_WEBHOOK_SECRET=your_paddle_webhook_secret

# ===== AI PROVIDERS =====
# Choose one: OpenAI, Anthropic, or Gemini
OPENAI_API_KEY=sk-your-production-openai-api-key
# OR
ANTHROPIC_API_KEY=sk-ant-your-anthropic-api-key
# OR
GEMINI_API_KEY=your-gemini-api-key

# ===== ANALYTICS =====
POSTHOG_API_KEY=phc_your_production_posthog_api_key
POSTHOG_HOST=https://app.posthog.com

# ===== ERROR TRACKING =====
SENTRY_DSN=https://your-production-sentry-dsn@sentry.io/project-id

# ===== EMAIL (SMTP) =====
SMTP_HOST=smtp.your-email-provider.com
SMTP_PORT=587
SMTP_USER=your-smtp-username
SMTP_PASS=your-smtp-password
SMTP_FROM=noreply@lilove.org

# ===== DEPLOYMENT =====
NODE_ENV=production
PORT=5000
REPLIT_DOMAINS=lilove.org,www.lilove.org

# ===== OPTIONAL SERVICES =====
# Redis for caching (optional but recommended)
REDIS_URL=redis://username:password@host:port

# S3 or Cloud Storage (for file uploads)
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=lilove-uploads

# CloudFlare (optional, for CDN and DDoS protection)
CLOUDFLARE_API_KEY=your_cloudflare_api_key
CLOUDFLARE_ZONE_ID=your_cloudflare_zone_id
