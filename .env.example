# Database
DATABASE_URL=postgresql://user:password@host:5432/database

# Session
SESSION_SECRET=your-session-secret-here-change-in-production

# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret
GOOGLE_WEB_CLIENT_ID=your-google-web-client-id

# Apple Sign-In
APPLE_CLIENT_ID=org.lilove.signin
APPLE_SERVICE_ID=org.lilove.signin
APPLE_TEAM_ID=your-apple-team-id
APPLE_KEY_ID=your-apple-key-id
APPLESIGNIN_SECRET_KEY=-----BEGIN PRIVATE KEY-----\nYour Apple private key here\n-----END PRIVATE KEY-----
APPLE_PRIVATE_KEY_PEM=-----BEGIN PRIVATE KEY-----\nYour Apple private key here\n-----END PRIVATE KEY-----

# Apple App Store (for IAP)
APPSTORE_KEY_ID=your-appstore-key-id
APPSTORE_ISSUER_ID=your-appstore-issuer-id
APPLE_BUNDLE_ID=org.lilove.app
appstore_private_key=-----BEGIN PRIVATE KEY-----\nYour App Store private key here\n-----END PRIVATE KEY-----

# Paddle Payments
PADDLE_API_KEY=your-paddle-api-key
PADDLE_WEBHOOK_SECRET=your-paddle-webhook-secret

# Stripe Payments (deprecated but still supported)
STRIPE_SECRET_KEY=your-stripe-secret-key
STRIPE_PUBLISHABLE_KEY=your-stripe-publishable-key

# iyzipay (Turkish Market)
IYZIPAY_API_KEY=your-iyzipay-api-key
IYZIPAY_SECRET_KEY=your-iyzipay-secret-key

# OpenAI (AI Mentor)
OPENAI_API_KEY=your-openai-api-key

# PostHog Analytics
POSTHOG_API_KEY=your-posthog-api-key
POSTHOG_HOST=https://app.posthog.com

# Deployment
NODE_ENV=production
REPLIT_DOMAINS=lilove.org,www.lilove.org
